@model Parking.Models.VehicleControl

@{
    ViewData["Title"] = "Checkout";
}

    <h1>Registrar Saída do Veículo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Checkout">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Placa" class="control-label"></label>
                <input asp-for="Placa" class="form-control" />
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraEntrada" class="control-label"></label>
                <input asp-for="HoraEntrada" class="form-control" />
                <span asp-validation-for="HoraEntrada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraSaida" class="control-label"></label>
                <input asp-for="HoraSaida" class="form-control" />
                <span asp-validation-for="HoraSaida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duracao" class="control-label"></label>
                <input asp-for="Duracao" class="form-control" />
                <span asp-validation-for="Duracao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QtdHorasCobradas" class="control-label"></label>
                <input asp-for="QtdHorasCobradas" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ValorHora" class="control-label"></label>
                <input asp-for="ValorHora" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Valor hora</label>
                <input class="form-control" value="Hora Inicial: @String.Format("{0:C}", ViewBag.vlrHoraInicial) | Hora Adicional: @String.Format("{0:C}", ViewBag.vlrHoraAdicional)" />
            </div>
            <div class="form-group">
                <label class="control-label">Valor a Pagar</label>
                <input class="form-control" value="@String.Format("{0:C}",ViewBag.totalAPagar)" />
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar Saída" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<a asp-action="Index">
    <a asp-action="Index">
        <input class="btn btn-success" type="Submit" value="Voltar">
    </a>
</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
